{
    "name": "maspeng/php-ci-sandbox",
    "description": "Sandbox repository to demonstrate various CI configurations",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Marco Spengler",
            "email": "maspeng@outlook.com",
            "homepage": "https://gitlab.com/MaSpeng",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4.6",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "sensio/framework-extra-bundle": "^5.5.5",
        "symfony/console": "5.1.*",
        "symfony/dotenv": "5.1.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.1.*",
        "symfony/yaml": "5.1.*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MaSpeng\\PhpCiSandbox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MaSpeng\\PhpCiSandbox\\Tests\\Unit\\": "tests/Unit/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "analyze-code": [
            "tools/phpstan/vendor/bin/phpstan --version",
            "tools/phpstan/vendor/bin/phpstan --no-progress --memory-limit=-1 -- analyse"
        ],
        "fix-style": [
            "tools/squizlabs/vendor/bin/phpcbf --version",
            "tools/squizlabs/vendor/bin/phpcbf -p"
        ],
        "install-tools": [
            "for TOOL in tools/*; do if [[ ! -f \"${TOOL}/composer.json\" ]]; then rm -Rf \"${TOOL}\"; fi done",
            "@composer bin all install"
        ],
        "lint": [
            "tools/squizlabs/vendor/bin/phpcs --version",
            "tools/squizlabs/vendor/bin/phpcs -p -s"
        ],
        "lint-config": [
            "bin/console lint:yaml config"
        ],
        "lint-container": [
            "bin/console lint:container"
        ],
        "test": [
            "tools/phpunit/vendor/bin/phpunit --version",
            "tools/phpunit/vendor/bin/phpunit --log-junit=test-report.xml"
        ],
        "test-with-coverage": [
            "tools/phpunit/vendor/bin/phpunit --version",
            "tools/phpunit/vendor/bin/phpunit --testsuite \"Unit tests\" --log-junit=test-report.xml --coverage-clover=clover.xml"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        }
    }
}
